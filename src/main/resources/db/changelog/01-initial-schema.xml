<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="kanstantin">
        <createTable tableName="product"
                     remarks="A table to contain all products">
            <column name="id" type="int">
                <constraints nullable="false"></constraints>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="calories" type="float"></column>
            <column name="proteins" type="float"></column>
            <column name="fats" type="float"></column>
            <column name="carbohydrates" type="float"></column>
            <column name="category" type="int"></column>
        </createTable>

        <addPrimaryKey columnNames="id"
                       constraintName="pk_product"
                       tableName="product"/>

        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          startWith="10000"
                          tableName="product"/>
    </changeSet>

    <changeSet id="02" author="kanstantin">
        <createTable tableName="prod_category"
                     remarks="A table with list of product categories">
            <column name="id" type="int">
                <constraints nullable="false"></constraints>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="parent_cat" type="int"></column>
        </createTable>

        <addPrimaryKey columnNames="id"
                       constraintName="pk_category"
                       tableName="prod_category"/>

        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          startWith="200"
                          tableName="prod_category"/>
        <addForeignKeyConstraint baseColumnNames="parent_cat"
                                 baseTableName="prod_category"
                                 constraintName="fk_parent_prod_category"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="prod_category"/>

        <addForeignKeyConstraint baseColumnNames="category"
                                 baseTableName="product"
                                 constraintName="fk_category_of_product"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="prod_category"/>


    </changeSet>

    <changeSet id="01" author="volha">
        <createTable tableName="outfit"
                     remarks="A table to contain all outfits">
            <column name="id" type="int">
                <constraints nullable="false"></constraints>
            </column>
            <column name="name_outfit" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="count_people_outfit" type="int">
                <constraints nullable="false"></constraints>
            </column>
            <column name="start_date_outfit" type="datetime"></column>
            <column name="end_date_outfit" type="datetime"></column>
            <column name="count_days_outfit" type="int">
                <constraints nullable="false"></constraints>
            </column>
            <column name="description" type="varchar(255)"></column>
        </createTable>

        <addPrimaryKey columnNames="id"
                       constraintName="pk_outfit"
                       tableName="outfit"/>

        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          startWith="200000"
                          tableName="outfit"/>
    </changeSet>

    <changeSet id="02" author="volha">
        <createTable tableName="day"
                     remarks="A table to contain all days">
            <column name="id" type="int">
                <constraints nullable="false"></constraints>
            </column>
            <column name="name_day" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="outfit_of_day" type="int">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="id"
                       constraintName="pk_day"
                       tableName="day"/>

        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          startWith="100"
                          tableName="day"/>
        <addForeignKeyConstraint baseColumnNames="outfit_of_day"
                                 baseTableName="day"
                                 constraintName="fk_outfit_of_day"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="outfit"/>

    </changeSet>

    <changeSet id="03" author="volha">
        <createTable tableName="meal"
                     remarks="A table to contain all meals">
            <column name="id" type="int">
                <constraints nullable="false"></constraints>
            </column>
            <column name="name_meal" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>

        </createTable>

        <addPrimaryKey columnNames="id"
                       constraintName="pk_meal"
                       tableName="meal"/>

        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          startWith="1000"
                          tableName="meal"/>

    </changeSet>

    <changeSet id="04" author="volha">
        <createTable tableName="dish"
                     remarks="A table to contain all dishes">
            <column name="id" type="int">
                <constraints nullable="false"></constraints>
            </column>
            <column name="name_dish" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="category_of_dish" type="int">
            </column>

        </createTable>

        <addPrimaryKey columnNames="id"
                       constraintName="pk_dish"
                       tableName="dish"/>

        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          startWith="10000"
                          tableName="dish"/>

    </changeSet>

    <changeSet id="05" author="volha">
        <createTable tableName="day_has_meal"
                     remarks="A table to contain dependencies between days and meals">
            <column name="day_id" type="int">
                <constraints nullable="false"></constraints>
            </column>
            <column name="meal_id" type="int">
                <constraints nullable="false"></constraints>
            </column>

        </createTable>

        <addForeignKeyConstraint baseColumnNames="meal_id"
                                 baseTableName="day_has_meal"
                                 constraintName="fk_meal_of_day"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="meal"/>

        <addForeignKeyConstraint baseColumnNames="day_id"
                                 baseTableName="day_has_meal"
                                 constraintName="fk_day_with_meal"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="day"/>


    </changeSet>

    <changeSet id="06" author="volha">
        <createTable tableName="meal_has_product"
                     remarks="A table to contain dependencies between meals and products">
            <column name="meal_id" type="int">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="product_id" type="int">
                <constraints nullable="false" unique="true"/>
            </column>

        </createTable>

        <addForeignKeyConstraint baseColumnNames="meal_id"
                                 baseTableName="meal_has_product"
                                 constraintName="fk_meal_from_product"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="meal"/>

        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="meal_has_product"
                                 constraintName="fk_product_of_meal"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>

    </changeSet>

    <changeSet id="07" author="volha">
        <createTable tableName="meal_has_dish"
                     remarks="A table to contain dependencies between meals and dishes">
            <column name="meal_id" type="int">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="dish_id" type="int">
                <constraints nullable="false" unique="true"/>
            </column>


        </createTable>

        <addForeignKeyConstraint baseColumnNames="meal_id"
                                 baseTableName="meal_has_dish"
                                 constraintName="fk_meal_of_dish"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="meal"/>

        <addForeignKeyConstraint baseColumnNames="dish_id"
                                 baseTableName="meal_has_dish"
                                 constraintName="fk_dish_of_meal"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="dish"/>

    </changeSet>

    <changeSet id="08" author="volha">
        <createTable tableName="dish_has_product"
                     remarks="A table to contain dependencies between dishes and products">
            <column name="dish_id" type="int">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="product_id" type="int">
                <constraints nullable="false" unique="true"/>
            </column>

        </createTable>

        <addForeignKeyConstraint baseColumnNames="dish_id"
                                 baseTableName="dish_has_product"
                                 constraintName="fk_dish_for_product"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="dish"/>

        <addForeignKeyConstraint baseColumnNames="product_id"
                                 baseTableName="dish_has_product"
                                 constraintName="fk_product_creates_dish"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="product"/>

    </changeSet>


    <changeSet author="kanstantin" id="03">
        <loadData encoding="UTF-8"
                  file="db/data/product_categories.csv"
                  tableName="prod_category"
                  quotchar="&quot;"
                  separator=":">
            <column name="id" type="numeric"/>
            <column name="name" type="string"/>
        </loadData>
        <loadData encoding="UTF-8"
                  file="db/data/products.csv"
                  tableName="product"
                  quotchar="&quot;"
                  separator=":">
            <column name="id" header="id" type="numeric"/>
            <column name="name" header="name" type="string"/>
            <column name="calories" header="calories" type="numeric"/>
            <column name="proteins" header="proteins" type="numeric"/>
            <column name="fats" header="fats" type="numeric"/>
            <column name="carbohydrates" header="carbohydrates" type="numeric"/>
            <column name="category" header="category" type="numeric"/>
        </loadData>
    </changeSet>
</databaseChangeLog>